  "scripts": {
    "start": "nodemon src/index.ts",
    "build": "tsc",
    "dev": "nodemon src/index.ts --exec ts-node",
    "debug": "nodemon --inspect src/index.ts --exec ts-node",
    "prod": "node dist/index.js",
