  "author": "Minaro",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Epita-Expert/pc-pokedex/issues"
  },
  "homepage": "https://github.com/Epita-Expert/pc-pokedex#readme",
  "dependencies": {
    "@prisma/client": "^4.7.1",
    "bcrypt": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^8.5.1",
    "prisma": "^4.7.1",
    "swagger-ui-express": "^4.6.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.2.4",
