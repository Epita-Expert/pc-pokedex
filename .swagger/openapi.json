  "tags": [
    {
      "name": "Auth",
      "description": "Operation about authentication"
    },
    {
      "name": "Trainers",
      "description": "Operations about trainers"
    },
    {
      "name": "Pokemons",
      "description": "Operation about pokemons"
    },
    {
      "name": "Trades",
