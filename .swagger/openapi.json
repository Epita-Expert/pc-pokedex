  "paths": {
    "/trainers/{id}": {
      "put": {
        "tags": [
          "Trainers"
        ],
        "summary": "Update a trainer",
        "description": "Returns the trainer updated",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The trainer's id",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateTrainerDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Trainer"
                }
              }
            }
          }
        },
        "security": [
          {
            "oAuth": [
              "write:trainer"
            ]
          }
        ]
      },
      "delete": {
        "tags": [
          "Trainers"
        ],
        "summary": "Delete a trainer",
        "description": "Returns the trainer deleted",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The trainer's id",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Trainer"
                }
              }
            }
          }
        },
        "security": [
          {
            "oAuth": [
              "delete:trainer"
            ]
          }
        ]
      }
    },
    "/pokemons": {
      "get": {
        "tags": [
          "Pokemons"
        ],
        "summary": "Get all pokemons",
        "description": "Returns all pokemons",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "pokemons": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Pokemon"
                      }
                    },
                    "total": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "oAuth": [
              "read:pokemon"
            ]
          }
        ]
      }
    },
